<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DropdownItemText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="CustomButtonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/rounded_dark_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomLightItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/rounded_dark_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">#212122</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_button_black_rounded</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>







</resources>