<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
    <!--  Bar 1  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:background="@drawable/bg_button_black_rounded" android:orientation="vertical" android:padding="16dp" android:elevation="4dp">
        <ImageView android:layout_width="match_parent" android:layout_height="200dp" android:scaleType="centerCrop" android:src="@drawable/drink1" android:layout_marginBottom="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Azotea del Círculo" android:textSize="18sp" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginBottom="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calle de Alcalá, 42" android:textSize="14sp" android:textColor="#CCCCCC" android:layout_marginBottom="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Una terraza con vistas impresionantes ideal para cócteles al atardecer." android:textSize="14sp" android:textColor="#AAAAAA" android:layout_marginBottom="8dp"/>
        <Button android:id="@+id/visitWebsiteButton1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Más información" android:backgroundTint="#007BFF" android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>