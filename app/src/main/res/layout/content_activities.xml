        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Explora Madrid en bici con un guía local, ideal para conocer la ciudad de forma divertida." android:textSize="14sp" android:textColor="#CCCCCC" android:layout_marginBottom="8dp"/>
